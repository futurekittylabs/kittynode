{
  "name": "website",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format-lint": "prettier --check . --ignore-path ../.prettierignore && biome format . && biome lint .",
    "format-lint:fix": "prettier --write . --ignore-path ../.prettierignore && biome format . --fix && biome lint . --fix"
  },
  "devDependencies": {
    "@internationalized/date": "^3.9.0",
    "@lucide/svelte": "^0.545.0",
    "@sveltejs/adapter-cloudflare": "^7.2.3",
