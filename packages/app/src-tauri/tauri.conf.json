{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Kittynode",
  "identifier": "com.futurekittylabs.kittynode",
  "build": {
    "beforeDevCommand": "bun -F app dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun -F app build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Kittynode",
        "visible": true,
        "height": 900,
        "width": 1200,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["bin/deposit"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true,
    "category": "Utility"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU2OTc5NEIzOEYxRDA3QzQKUldURUJ4MlBzNVNYNWhtNGw2bEQxUjRvRTNhOXpuMStMNkRUYVlhYjJrTUlOWG1UNTZTL3FrcTgK",
      "endpoints": [
        "https://github.com/futurekittylabs/kittynode/releases/latest/download/latest.json"
      ]
    }
  }
}
